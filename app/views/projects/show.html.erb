<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@project.image, width: 600) %>
</p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>About:</strong>
  <%= simple_format(@project.about) %>
</p>

<p>
  <strong>Dev date:</strong>
  <%= @project.dev_date %>
</p>

<p>
  <strong>Repo:</strong>
  <%= @project.repo %>
</p>

<p>
  <strong>Status:</strong>
  <%= @project.status %>
</p>

<!-- only allow admins to see edit link -->
<% if admin_signed_in? %>
  <%= link_to 'Edit', edit_project_path(@project) %> |
<% end %>
<%= link_to 'Back', projects_path %>